<div class="row">
  <div class='col-md-2' ><span class='<%= "alert-danger" if account.errors.details.keys.include?(:name) %>'  style="display: inherit;"  >  <%= f.text_field :name, value: @account.name, autocomplete: 'off', size: 40, class: 'form-control', type: '' %>
   <label class='form-text' >Name</label>
</span></div>
<div class='col-md-2' ><span class='<%= "alert-danger" if account.errors.details.keys.include?(:is_admin) %>'  style="display: inherit;"  >   <span>Is admin</span>  <%= f.radio_button(:is_admin,  '0', checked: account.is_admin  ? '' : 'checked') %>
  <%= f.label(:is_admin, value: 'No', for: 'account_is_admin_0') %>
  <%= f.radio_button(:is_admin, '1',  checked: account.is_admin  ? 'checked' : '') %>
  <%= f.label(:is_admin, value: 'Yes', for: 'account_is_admin_1') %>
</span></div>
<div class='col-md-2' ><span class='<%= "alert-danger" if account.errors.details.keys.include?(:email) %>'  style="display: inherit;"  >  <%= f.text_field :email, value: @account.email, autocomplete: 'off', size: 40, class: 'form-control', type: '' %>
   <label class='form-text' >Email</label>
</span></div>

  <div class="col-md-2">
    <%= link_to "Cancel", admin_accounts_path,  {class: "btn btn-secondary"} %>
    <%= f.submit "Save", class: "btn btn-primary pull-right" %>
  </div>
</div>
